<h1>New Discount</h1>

  <%= form_tag '/merchant/discounts', method: :post do %>
    <label>
      <%= label_tag :discount %>
      <%= text_field_tag :discount %>
    </label>
    <label>
      <%= label_tag :item_quantity %>
      <%= text_field_tag :item_quantity %>
    </label>
    <label>
    <%= submit_tag 'Save Discount' %>
    </label>
  <% end %>
